[user]
    name  = George Papanikolaou
    email = gpapanikolaou@skroutz.gr
[github]
    user = papanikge
[color]
    ui = true
[core]
    editor  = vim --noplugin
[push]
    default = upstream
[grep]
    lineNumber = true
[alias]
    zip       = archive --output latest.zip HEAD
    pullr     = submodule foreach git pull
    news      = diff --stat HEAD@{1}..HEAD
    tree      = !git log --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%C(yellow)%d' -- | head
    serve     = daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
    root      = rev-parse --show-toplevel
    yesterday = log --since '1 day ago' --oneline
    d         = diff
    dc        = diff --cached
    dw        = diff --word-diff
    dn        = diff --name-only
    fml       = reset --hard
    edit      = !git rebase -i $(git merge-base head master)
[sendemail]
    smtpserver = ~/.dotfiles/bin/msmtpq
[help]
    autocorrect = 1
[branch]
    autosetuprebase = always
[url "git@github.skroutz.gr:"]
    insteadOf = skroutz:
[rebase]
    autosquash = true
