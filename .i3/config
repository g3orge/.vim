# vim: filetype=i3

# mod1 = alt
# mod2 =
# mod3 =
# mod4 = super
set $mod Mod4
font pango:DejaVu Sans 9
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec terminator
bindsym $mod+Shift+Return exec google-chrome-stable

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+n split h

# split in vertical orientation
bindsym $mod+b split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# layouts (stacked, tabbed, toggle split)
bindsym $mod+w layout stacking
bindsym $mod+e layout tabbed
bindsym $mod+s layout toggle split

# tiling / floating windows
bindsym $mod+shift+t focus mode_toggle
bindsym $mod+t floating toggle
bindsym $mod+g sticky toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child


# names
set $w1 1 Î»
set $w2 2 www
set $w3 3 msg
set $w4 4 misc
set $w5 5 mx
set $w8 8 mail
# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Layouts
bindsym $mod+Mod1+1 workspace $w1; append_layout /home/papanikge/.i3/coding-three-verticals.json
bindsym $mod+Mod1+3 workspace $w3; append_layout /home/papanikge/.i3/slack-three-uneven.json

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Scratchpads
bindsym $mod+Shift+backslash move scratchpad
bindsym $mod+backslash scratchpad show

bindsym $mod+greater move workspace to output right
bindsym $mod+less move workspace to output left

bindsym $mod+Tab workspace back_and_forth

popup_during_fullscreen smart
mouse_warping none
focus_wrapping no

# Daemons and execs
exec --no-startup-id "xset r rate 300 44"
exec --no-startup-id "xbindkeys"
exec --no-startup-id "clipit"
exec --no-startup-id "sh ~/.fehbg"
exec --no-startup-id "udiskie -t"
exec --no-startup-id "pactl load-module module-bluetooth-discover"
exec --no-startup-id "blueman-applet"

# Window settings
for_window [class="Google-chrome"] border none
for_window [class="Spotify"] border none
for_window [class="Firefox"] border none
for_window [class="Thunderbird"] border none
for_window [class="MPlayer"] border none
for_window [class="MPlayer"] floating enable
assign [class="Spotify"] 5 mx
assign [class="Thunderbird"] 8 mail

#
# !!! Colors !!!
#
# item                  border  bground text    indicator child_border
client.focused          #005d48 #004939 #e5e5e5 #4A4A4A   #003629
client.placeholder      #242424 #242424 #242424
client.background       #242424 #242424 #242424
client.unfocused        #222222 #0B0B0B #aaaaaa #222222
client.focused_inactive #222222 #222222 #a9a9a9 #222222
client.urgent           #4A4A4A #4A4A4A #f7f7f7 #4A4A4A

bar {
    status_command i3status
    # font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
    # font pango:DejaVu Sans Mono 10
    colors {
        background         #000000
        statusline         #dddddd
        separator          #666666
        active_workspace   #333333 #0e1019 #888888
        focused_workspace  #003629 #007057 #ffffff
        inactive_workspace #333333 #0e1019 #888888
        urgent_workspace   #2f343a #900000 #ffffff
    }
}

exec terminator -c scratch-term
for_window [instance="scratch-term"] floating enable, move to scratchpad
bindsym $mod+p [instance="scratch-term"] scratchpad show
